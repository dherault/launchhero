{
  "private": true,
  "name": "submithero-monorepo",
  "scripts": {
    "install:all": "npm run install:root && npm run install:app && npm run install:functions",
    "install:root": "npm install",
    "install:app": "cd app && npm install",
    "install:functions": "cd app/functions && npm install",
    "lint": "npm run lint:app && npm run lint:functions",
    "lint:app": "cd app && npm run lint",
    "lint:functions": "cd app/functions && npm run lint",
    "build": "npm run build:app && npm run build:functions",
    "build:app": "cd app && npm run build",
    "build:functions": "cd app/functions && npm run build",
    "ncu": "npm run ncu:root && npm run ncu:app && npm run ncu:functions",
    "ncu:root": "ncu -i",
    "ncu:app": "cd app && ncu -i",
    "ncu:functions": "cd app/functions && ncu -i",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.0",
    "typescript-eslint": "^8.44.1"
  }
}
