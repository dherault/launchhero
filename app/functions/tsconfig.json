{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    /* Custom */
    "baseUrl": "./src",
    "paths": {
      "~types": ["types.ts"],
      "~constants": ["constants.ts"],
      "~firebase": ["firebase.ts"],
      "~routes/*": ["routes/*"],
      "~database/*": ["database/*"],
      "~contexts/*": ["contexts/*"],
      "~utils/*": ["utils/*"]
    },
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
   "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}
