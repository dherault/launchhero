{
  "name": "launchhero-directories",
  "version": "0.0.0",
  "description": "Core types and constants for launchhe.ro",
  "license": "SEE LICENSE IN LICENSE",
  "author": "David HÃ©rault <dherault@gmail.com> (https://github.com/dherault)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dherault/launchhero.git"
  },
  "homepage": "https://launchhe.ro",
  "type": "module",
  "main": "dist/directories.json",
  "types": "dist/directories.d.ts",
  "exports": {
    ".": {
      "types": "./dist/directories.d.ts",
      "default": "./dist/directories.json"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "build": "npm run build:clean && npm run build:directories",
    "build:clean": "rimraf dist",
    "build:directories": "tsx src/build.ts",
    "prepublishOnly": "npm run build",
    "deploy": "npm run deploy:patch",
    "deploy:patch": "npm version patch && npm run deploy:commit && npm publish",
    "deploy:minor": "npm version minor && npm run deploy:commit && npm publish",
    "deploy:major": "npm version major && npm run deploy:commit && npm publish",
    "deploy:commit": "git add . && git commit -m \"[directories] Publish\"",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "check": "npx knip"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.10",
    "openai": "^6.0.0",
    "rimraf": "^6.0.1",
    "slugify": "^1.6.6",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "launchhero-core": "^0.8.0"
  }
}
