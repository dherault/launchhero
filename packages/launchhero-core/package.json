{
  "name": "launchhero-core",
  "version": "0.8.2",
  "description": "Core types and constants for Launch Hero",
  "license": "SEE LICENSE IN LICENSE",
  "author": "David HÃ©rault <dherault@gmail.com> (https://github.com/dherault)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dherault/launchhero.git"
  },
  "homepage": "https://launchhe.ro",
  "type": "module",
  "main": "dist/launchhero-core.cjs.js",
  "module": "dist/launchhero-core.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/launchhero-core.es.js",
      "require": "./dist/launchhero-core.cjs.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "prepublishOnly": "npm run build",
    "deploy": "npm run deploy:patch",
    "deploy:patch": "npm version patch && npm run deploy:commit && npm publish",
    "deploy:minor": "npm version minor && npm run deploy:commit && npm publish",
    "deploy:major": "npm version major && npm run deploy:commit && npm publish",
    "deploy:commit": "git add . && git commit -m \"[core] Publish\"",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "check": "npx knip"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.1.7"
  }
}
